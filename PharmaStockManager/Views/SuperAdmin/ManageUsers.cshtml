<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Manage Users</title>
    <style>
        /* General Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9fbfd; /* Soft light background */
            color: #333; /* Neutral text color */
        }

        header {
            background-color: #dce6f7; /* Light blue */
            color: #2c3e50; /* Darker blue for contrast */
            padding: 1rem;
            text-align: center;
        }

        .role-button {
            background-color: #dce6f7; /* Light blue */
            color: #2c3e50;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            cursor: pointer;
            margin: 0 5px;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .role-button.active {
                background-color: #aac4e8; /* Slightly darker light blue */
            }

            .role-button:hover {
                background-color: #aac4e8;
            }

        .table-container {
            display: none;
        }

            .table-container.active {
                display: block;
            }

        .user-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 1rem;
            background-color: #ffffff; /* White for clarity */
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        }

            .user-table th, .user-table td {
                text-align: left;
                padding: 15px;
                border-bottom: 1px solid #ddd;
            }

            .user-table th {
                background-color: #aac4e8; /* Light blue header */
                color: #2c3e50;
            }

        .action-button {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            margin-right: 5px;
            font-weight: bold;
        }

        .button-activate {
            background-color: #a8df90; /* Light green */
            color: #2c3e50;
        }

        .button-deactivate {
            background-color: #f5b7b1; /* Light red */
            color: #2c3e50;
        }

        .button-delete {
            background-color: #ffd59e; /* Light orange */
            color: #2c3e50;
        }

        .button-activate:hover {
            background-color: #93c97c; /* Slightly darker green */
        }

        .button-deactivate:hover {
            background-color: #e99a96; /* Slightly darker red */
        }

        .button-delete:hover {
            background-color: #ffbe75; /* Slightly darker orange */
        }

        nav {
            display: flex;
            justify-content: center; /* Centers the navigation bar */
            gap: 10px; /* Adds a small, uniform space between buttons */
            margin-bottom: 1rem;
        }

        .role-button {
            background-color: #dce6f7; /* Light blue */
            color: #2c3e50; /* Darker blue for contrast */
            border: none;
            padding: 0.6rem 1.2rem; /* Reduced padding for a compact design */
            border-radius: 8px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s ease;
        }

            .role-button.active {
                background-color: #aac4e8; /* Slightly darker light blue */
            }

            .role-button:hover {
                background-color: #aac4e8; /* Hover effect */
            }

    </style>
</head>
<body>
    <div class="container">
        <header>
            <h1>Manage Users</h1>
        </header>
        <nav>
            <button class="role-button active" data-role="admins">Admins</button>
            <button class="role-button" data-role="customers">Customers</button>
            <button class="role-button" data-role="employees">Employees</button>
        </nav>
        <main>
            <!-- Admin Table -->
            <div class="table-container active" id="admins">
                <h2>Admins</h2>
                <table class="user-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>1</td>
                            <td>Admin One</td>
                            <td>admin1@example.com</td>
                            <td>Active</td>
                            <td>
                                <button class="action-button button-deactivate">Deactivate</button>
                                <button class="action-button button-delete">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- Customer Table -->
            <div class="table-container" id="customers">
                <h2>Customers</h2>
                <table class="user-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>101</td>
                            <td>Customer One</td>
                            <td>customer1@example.com</td>
                            <td>Inactive</td>
                            <td>
                                <button class="action-button button-activate">Activate</button>
                                <button class="action-button button-delete">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- Employee Table -->
            <div class="table-container" id="employees">
                <h2>Employees</h2>
                <table class="user-table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>201</td>
                            <td>Employee One</td>
                            <td>employee1@example.com</td>
                            <td>Active</td>
                            <td>
                                <button class="action-button button-deactivate">Deactivate</button>
                                <button class="action-button button-delete">Delete</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
    <script>
        // JavaScript for Interactive Role Switching
        const buttons = document.querySelectorAll('.role-button');
        const tables = document.querySelectorAll('.table-container');

        buttons.forEach(button => {
            button.addEventListener('click', () => {
                // Remove active state from all buttons and hide all tables
                buttons.forEach(btn => btn.classList.remove('active'));
                tables.forEach(table => table.classList.remove('active'));

                // Add active state to the clicked button and show the associated table
                button.classList.add('active');
                document.getElementById(button.dataset.role).classList.add('active');
            });
        });
    </script>
</body>
</html>
