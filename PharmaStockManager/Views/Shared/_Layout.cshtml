<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PharmaStockManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PharmaStockManager.styles.css" asp-append-version="true" />
    <style>
        .super-admin-button {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: red;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            font-family: inherit;
            z-index: 1000;
            transition: background-color 0.3s ease;
        }

        .super-admin-button:hover {
            background-color: darkred;
        }
    </style>
</head>
<body>
    <div class="container">
        <nav>
            <div class="logo">
                <a asp-controller="Home" asp-action="Index">
                    <div class="logo-circle">
                        <div class="pill-icon"></div>
                    </div>
                    <span class="logo-text">Pharma Stock Manager</span>
                </a>
            </div>

            <div class="nav-links">
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-controller="Drugs" asp-action="Index" class="nav-link">Manage Drugs</a>
                        <a asp-controller="Categories" asp-action="Index" class="nav-link">Categories</a>
                        <a asp-controller="Request" asp-action="Index" class="nav-link">Requests</a>
                    }
                    @if (User.IsInRole("User"))
                    {
                        <a asp-controller="UserPanel" asp-action="Index" class="nav-link">User Panel</a>
                    }
                    <a asp-controller="Account" asp-action="Profile" class="nav-link">Hello, @User.Identity.Name!</a>
                    <a asp-controller="Account" asp-action="Logout" class="button button-primary">Logout</a>
                }
                else
                {
                    <a asp-controller="Home" asp-action="About" class="nav-link">About Us</a>
                    <a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a>
                    <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                    <a asp-controller="Account" asp-action="Register" class="button button-primary">Sign Up</a>
                }
            </div>
        </nav>

        <!-- Notification Messages -->
        <div class="mt-3">
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }
        </div>

        <main role="main">
            @RenderBody()
        </main>
    </div>

    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
        <button id="scroll-button" class="scroll-button" aria-label="Scroll to bottom">
            <svg class="scroll-arrow" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"
                 stroke-linecap="round" stroke-linejoin="round">
                <path d="M7 13l5 5 5-5" />
                <path d="M7 6l5 5 5-5" />
            </svg>
        </button>
    </div>

    @if (User.IsInRole("Admin"))
    {
        <a asp-controller="Admin" asp-action="Dashboard" class="super-admin-button">Admin Panel</a>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        document.getElementById("scroll-button").addEventListener("click", () => {
            window.scrollTo({
                top: document.body.scrollHeight,
                behavior: "smooth",
            });
        });

        window.addEventListener("scroll", () => {
            const scrollIndicator = document.querySelector(".scroll-indicator");
            const bottomReached =
                window.innerHeight + window.scrollY >=
                document.documentElement.scrollHeight - 100;

            scrollIndicator.style.opacity = bottomReached ? "0" : "1";
            scrollIndicator.style.pointerEvents = bottomReached ? "none" : "all";
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>