@model IEnumerable<PharmaStockManager.Models.Identity.AppUser>

@{
    ViewData["Title"] = "User Management";
}

<h2>User Management</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Username</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Admin" asp-action="EditPermissions" asp-route-id="@user.Id">Edit</a>
                    <a class="btn btn-danger" asp-controller="Admin" asp-action="DeleteUser" asp-route-id="@user.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
