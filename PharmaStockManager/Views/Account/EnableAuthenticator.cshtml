@model PharmaStockManager.Models.Identity.ChangePasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pharma Stock Manager - Change Password</title>
    <link rel="stylesheet" href="~/css/styles.css" />
    

</head>
<body>
    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
        <button id="scroll-button"
                class="scroll-button"
                aria-label="Scroll to bottom">
            <svg class="scroll-arrow"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M7 13l5 5 5-5" />
                <path d="M7 6l5 5 5-5" />
            </svg>
        </button>
    </div>

    <div class="container">
        <nav>
            <div class="logo">
                <div class="logo-circle">
                    <div class="pill-icon"></div>
                </div>
                <span class="logo-text">Pharma Stock Manager</span>
            </div>
            <div class="nav-links">
                <a href="#" class="nav-link">About Us</a>
                <a href="#" class="nav-link">Contact</a>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Account
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangeEmail">Change Email</a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="EnableAuthenticator">Enable Authenticator</a>
                        </li>
                    </ul>
                </div>
                <a href="/Account/Logout" class="nav-link">Logout</a>
            </div>
        </nav>

        <main>
            <section class="hero">
                <div class="hero-content">
                    <h1>Activate 2FA</h1>
                    <div>
                        <h3>Enable Two-Factor Authentication</h3>
                        <p>Scan the following QR code in your authenticator app:</p>
                        <img src="~/uploads/qr.png" alt="QR Code" />
                        <p>Or enter this key manually:<br></br> <strong>@ViewBag.AuthenticatorKey</strong></br>
                    </div>
                    <form asp-action="VerifyAuthenticatorCode" asp-controller="Account" method="post">
                        <label for="code">Enter the verification code generated by your app:</label>
                        <input type="text" id="code" name="code" required />
                        <button type="submit">Enable 2FA</button>
                    </form>
                </div>
            </section>
        </main>
    </div>

    <!-- Scroll to Bottom Script -->
    <script>
        document.getElementById("scroll-button").addEventListener("click", () => {
          window.scrollTo({
            top: document.body.scrollHeight,
            behavior: "smooth",
          });
        });

        // Hide scroll indicator when reaching the last section
        window.addEventListener("scroll", () => {
          const scrollIndicator = document.querySelector(".scroll-indicator");
          const bottomReached =
            window.innerHeight + window.scrollY >=
            document.documentElement.scrollHeight - 100;

          scrollIndicator.style.opacity = bottomReached ? "0" : "1";
          scrollIndicator.style.pointerEvents = bottomReached ? "none" : "all";
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
