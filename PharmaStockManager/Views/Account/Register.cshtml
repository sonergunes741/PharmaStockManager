@model PharmaStockManager.Models.Identity.RegisterViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="tr">
<head>
    
</head>
<body>
    <article class="mb-4">
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    @using (Html.BeginForm())
                    {
                        <div class="mb-3">
                            <label for="Title" class="form-label">Kullanıcı Adı</label>
                            @Html.TextBoxFor(m => m.FullName, new { @class = "form-control", @id = "username", @required = "required" })
                            @Html.ValidationMessageFor(m => m.FullName)
                        </div>

                        <div class="mb-3">
                            <label for="Subtitle" class="form-label">Şifre</label>
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", @id = "password", @required = "required", @type = "password" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>

                        <div class="mb-3">
                            <label for="Title" class="form-label">Eposta</label>
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @id = "email", @type = "email" })
                            @Html.ValidationMessageFor(m => m.Email)
                        </div>

                        <div class="mb-3">
                            <label for="Title" class="form-label">RefCode</label>
                            @Html.TextBoxFor(m => m.RefCode, new { @class = "form-control", @id = "refcode"})
                            @Html.ValidationMessageFor(m => m.RefCode)
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </article>
</body>
</html>
