@model PharmaStockManager.Models.Identity.ChangePasswordViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pharma Stock Manager - Change Password</title>
    <link rel="stylesheet" href="~/css/styles.css" />
   
</head>
<body>
    <!-- Scroll Indicator -->
    <div class="scroll-indicator">
        <button id="scroll-button"
                class="scroll-button"
                aria-label="Scroll to bottom">
            <svg class="scroll-arrow"
                 viewBox="0 0 24 24"
                 fill="none"
                 stroke="currentColor"
                 stroke-width="2"
                 stroke-linecap="round"
                 stroke-linejoin="round">
                <path d="M7 13l5 5 5-5" />
                <path d="M7 6l5 5 5-5" />
            </svg>
        </button>
    </div>

    <div class="container">
        <nav>
            <div class="logo">
                <div class="logo-circle">
                    <div class="pill-icon"></div>
                </div>
                <span class="logo-text">Pharma Stock Manager</span>
            </div>
            <div class="nav-links">
                <a href="#" class="nav-link">About Us</a>
                <a href="#" class="nav-link">Contact</a>
                <div class="dropdown">
                    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        Account
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Profile">Profile</a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangePassword">Change Password</a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangeEmail">Change Email</a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="EnableAuthenticator">Enable Authenticator</a>
                        </li>
                    </ul>
                </div>
                <a href="/Account/Logout" class="nav-link">Logout</a>
            </div>
        </nav>

        <main>
            <section class="hero">
                <div class="hero-content">
                    <h1>Change Your Password</h1>
                    <p>
                        Update your password below to secure your account.
                    </p>
                    <form asp-action="ChangePassword" asp-controller="Account" method="post">
                        <div>
                            <label asp-for="OldPassword">Current Password</label>
                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Enter your old password" required />
                            <span asp-validation-for="OldPassword" class="text-danger"></span>
                        </div>

                        <div>
                            <label asp-for="NewPassword">New Password</label>
                            <input asp-for="NewPassword" type="password" class="form-control" placeholder="Enter your new password" required />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div>
                            <label asp-for="ConfirmPassword">Confirm Password</label>
                            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your new password" required />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-primary">Update Password</button>
                        </div>
                    </form>
                </div>
            </section>
        </main>
    </div>

    <!-- Scroll to Bottom Script -->
    <script>
        document.getElementById("scroll-button").addEventListener("click", () => {
          window.scrollTo({
            top: document.body.scrollHeight,
            behavior: "smooth",
          });
        });

        // Hide scroll indicator when reaching the last section
        window.addEventListener("scroll", () => {
          const scrollIndicator = document.querySelector(".scroll-indicator");
          const bottomReached =
            window.innerHeight + window.scrollY >=
            document.documentElement.scrollHeight - 100;

          scrollIndicator.style.opacity = bottomReached ? "0" : "1";
          scrollIndicator.style.pointerEvents = bottomReached ? "none" : "all";
        });
    </script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

