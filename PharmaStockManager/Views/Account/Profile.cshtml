@model PharmaStockManager.Models.Identity.ProfileViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/styles.css">
    <title>Profile - PharmaStockManager</title>
    

</head>
<body>
    <div class="container">
        <nav>
            <div class="logo">
                <div class="logo-circle">
                    <div class="pill-icon"></div>
