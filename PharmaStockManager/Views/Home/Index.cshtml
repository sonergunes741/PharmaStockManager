@{
    ViewData["Title"] = "Dashboard";
}

<h1>Dashboard</h1>

<div class="row">
    <div class="col-md-6">
        <h2>Drugs</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var drug in Model.Drugs)
                {
                    <tr>
                        <td>@drug.Name</td>
                        <td>@drug.Category</td>
                        <td>@drug.Quantity</td>
                        <td>@drug.UnitPrice</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-6">
        <h2>Categories</h2>
        <table class="table">
            <thead>
                <tr>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model.Categories)
                {
                    <tr>
                        <td>@category.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
